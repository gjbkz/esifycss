{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "strict": true,
        "removeComments": true,
        "declaration": true,
        "sourceMap": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "./lib",
        "typeRoots": [
            "node_modules/@types",
            "src/@types"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "src/helper/*"
    ]
}
