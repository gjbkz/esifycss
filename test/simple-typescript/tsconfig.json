{
    "compilerOptions": {
        "target": "es2018",
        "module": "es6",
        "moduleResolution": "node",
        "strict": true,
        "declaration": true,
        "sourceMap": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "./temp"
    },
    "include": [
        "src/**/*.ts"
    ]
}
