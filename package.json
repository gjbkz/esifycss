{
    "name": "esifycss",
    "version": "1.3.11",
    "description": "Generates .js or .ts exports class names and custom properties",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "license": "Apache-2.0",
    "engines": {
        "node": ">=8"
    },
    "repository": "kei-ito/esify",
    "main": "lib/index.js",
    "files": [
        "lib",
        "@types/css.d.ts"
    ],
    "bin": {
        "esifycss": "lib/bin/esifycss.js"
    },
    "scripts": {
        "lint": "eslint --ext .ts src scripts @types test",
        "build:cleanup": "rimraf lib src/helper/index.js",
        "build:helper:tsc": "tsc --project tsconfig.helper.json",
        "build:helper:copy1": "ts-node scripts/copy ./src/helper ./lib/helper",
        "build:helper:copy2": "ts-node scripts/copy ./lib/helper ./src/helper",
        "build:helper": "run-s build:helper:copy1 build:helper:tsc build:helper:copy2",
        "build:tsc": "tsc",
        "build:bin": "ts-node scripts/chmodScripts.ts",
        "build:sample1:cleanup": "rimraf sample/01-mangle",
        "build:sample1:copy": "ts-node scripts/copy sample/00-src sample/01-mangle",
        "build:sample1:esifycss": "node ./lib/bin/esifycss.js --helper sample/01-mangle/helper.js 'sample/01-mangle/**/*.css'",
        "build:sample1": "run-s build:sample1:cleanup build:sample1:copy build:sample1:esifycss",
        "build:sample2:cleanup": "rimraf sample/02-no-mangle",
        "build:sample2:copy": "ts-node scripts/copy sample/00-src sample/02-no-mangle",
        "build:sample2:esifycss": "node ./lib/bin/esifycss.js --noMangle --helper sample/02-no-mangle/helper.js 'sample/02-no-mangle/**/*.css'",
        "build:sample2": "run-s build:sample2:cleanup build:sample2:copy build:sample2:esifycss",
        "build": "run-s build:cleanup build:tsc build:helper build:bin build:sample*",
        "test": "ava -v",
        "test-client": "ava -v test/run.ts",
        "version:changelog": "conventional-changelog --preset angular --infile CHANGELOG.md --same-file --release-count 0",
        "version:add": "git add .",
        "version": "run-s version:changelog version:add",
        "prepack": "rimraf lib/**/*.test.* lib/**/*.for-test.*"
    },
    "dependencies": {
        "@nlib/nbnf": "^3.13.5",
        "acorn": "^7.1.0",
        "acorn-dynamic-import": "^4.0.0",
        "acorn-walk": "^7.0.0",
        "chokidar": "^3.3.0",
        "commander": "^4.0.1",
        "postcss": "^7.0.24",
        "postcss-selector-parser": "^6.0.2",
        "vlq": "^1.0.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.2.0",
        "@commitlint/config-conventional": "^8.2.0",
        "@nlib/lint": "^3.15.0",
        "@types/acorn-dynamic-import": "file:@types/acorn-dynamic-import",
        "@types/acorn-walk": "file:@types/acorn-walk",
        "@types/anymatch": "^1.3.1",
        "@types/jsdom": "^12.2.4",
        "@types/micromatch": "^3.1.1",
        "@types/node": "^12.12.14",
        "@types/postcss-scss": "file:@types/postcss-scss",
        "@types/selenium-webdriver": "^4.0.5",
        "@typescript-eslint/eslint-plugin": "^2.10.0",
        "@typescript-eslint/parser": "^2.10.0",
        "ava": "^2.4.0",
        "browserstack-local": "^1.4.2",
        "conventional-changelog-cli": "^2.0.28",
        "eslint": "^6.7.2",
        "husky": "^3.1.0",
        "lint-staged": "^9.5.0",
        "npm-run-all": "^4.1.5",
        "postcss-scss": "^2.0.0",
        "rimraf": "^3.0.0",
        "rollup": "^1.27.8",
        "selenium-webdriver": "^4.0.0-alpha.5",
        "ts-node": "^8.5.4",
        "typescript": "^3.7.3"
    },
    "ava": {
        "compileEnhancements": false,
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "files": [
            "lib/**/*.test.js"
        ]
    },
    "eslintConfig": {
        "extends": "./node_modules/@nlib/lint/.eslintrc.json",
        "env": {
            "es6": true,
            "node": true
        },
        "overrides": [
            {
                "files": [
                    "scripts/*.ts"
                ],
                "parserOptions": {
                    "project": "./tsconfig.base.json"
                },
                "rules": {
                    "no-bitwise": "off",
                    "no-console": "off"
                }
            },
            {
                "files": [
                    "@types/**/*.ts"
                ],
                "parserOptions": {
                    "project": "./tsconfig.base.json"
                }
            },
            {
                "files": [
                    "test/**/*.ts",
                    "*.test.ts",
                    "*.for-test.ts"
                ],
                "rules": {
                    "no-process-env": "off",
                    "max-lines-per-function": "off",
                    "class-methods-use-this": "off",
                    "require-atomic-updates": "off",
                    "@typescript-eslint/no-floating-promises": "off",
                    "@typescript-eslint/no-unnecessary-condition": "off",
                    "@typescript-eslint/triple-slash-reference": "off"
                },
                "parserOptions": {
                    "project": "./tsconfig.base.json"
                }
            },
            {
                "files": [
                    "src/helper/**/*"
                ],
                "rules": {
                    "no-bitwise": "off"
                },
                "parserOptions": {
                    "project": "./tsconfig.helper.json"
                }
            },
            {
                "files": [
                    "src/helper/**/*",
                    "test/*/src/*",
                    "sample/**/*"
                ],
                "env": {
                    "node": false,
                    "browser": true
                }
            },
            {
                "files": [
                    "src/helper/**/*.js"
                ],
                "rules": {
                    "brace-style": "off"
                }
            },
            {
                "files": [
                    "src/util/tokenizeString.ts",
                    "src/minifier/extractCSSFromScript.ts"
                ],
                "rules": {
                    "@typescript-eslint/no-unnecessary-condition": "off"
                }
            }
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.ts": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            ":ignoreModulesAndTests",
            ":unpublishSafe",
            ":semanticPrefixChore",
            ":prNotPending",
            ":prConcurrentLimit10",
            ":prHourlyLimitNone",
            ":label(dependencies)",
            ":automergeMinor"
        ]
    }
}
