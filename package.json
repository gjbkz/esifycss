{
    "name": "esifycss",
    "version": "0.1.16",
    "description": "Generates .js or .ts exports class names and custom properties",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "license": "MIT",
    "engines": {
        "node": ">=8"
    },
    "repository": "kei-ito/esify",
    "main": "lib/index.js",
    "bin": {
        "esifycss": "bin/esifycss"
    },
    "dependencies": {
        "@types/anymatch": "^1.3.1",
        "chokidar": "^2.1.5",
        "commander": "^2.20.0",
        "postcss": "^7.0.14"
    },
    "devDependencies": {
        "@commitlint/cli": "7.5.2",
        "@commitlint/config-conventional": "7.5.0",
        "@nlib/lint": "3.5.0",
        "@types/micromatch": "3.1.0",
        "@types/node": "^11.13.4",
        "@typescript-eslint/eslint-plugin": "^1.6.0",
        "acorn": "6.1.1",
        "ava": "^1.4.1",
        "conventional-changelog-cli": "2.0.12",
        "eslint": "5.16.0",
        "husky": "1.3.1",
        "lint-staged": "8.1.5",
        "npm-run-all": "4.1.5",
        "postcss-nested": "4.1.2",
        "ts-node": "^8.0.3",
        "typescript": "^3.4.3"
    },
    "scripts": {
        "lint": "eslint bin/esifycss lib test",
        "test": "tap --coverage test/*/test.js",
        "version:changelog": "conventional-changelog --preset angular --infile CHANGELOG.md --same-file --release-count 0",
        "version:add": "git add .",
        "version": "npm-run-all --sequential version:changelog version:add"
    },
    "ava": {
        "compileEnhancements": false,
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ]
    },
    "eslintConfig": {
        "extends": "./node_modules/@nlib/lint/.eslintrc.json",
        "env": {
            "es6": true,
            "node": true
        },
        "overrides": [
            {
                "files": [
                    "*.ts"
                ],
                "rules": {
                    "@typescript-eslint/no-require-imports": "off"
                }
            }
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "eslint"
        ]
    },
    "renovate-config": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
