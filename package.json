{
    "name": "esifycss",
    "version": "1.1.0",
    "description": "Generates .js or .ts exports class names and custom properties",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "license": "Apache-2.0",
    "engines": {
        "node": ">=8"
    },
    "repository": "kei-ito/esify",
    "main": "lib/index.js",
    "files": [
        "lib"
    ],
    "bin": {
        "esifycss": "lib/bin/esifycss.js"
    },
    "scripts": {
        "lint": "eslint --ext .ts src",
        "build:cleanup": "rimraf lib",
        "build:helper": "cpy src/helper lib/helper",
        "build:tsc": "tsc",
        "build:bin": "ts-node scripts/chmodScripts.ts",
        "build:sample1:cleanup": "rimraf sample/01-mangle",
        "build:sample1:cpy": "cpy sample/00-src sample/01-mangle",
        "build:sample1:esifycss": "node ./lib/bin/esifycss.js --helper sample/01-mangle/helper.js 'sample/01-mangle/**/*.css'",
        "build:sample1": "run-s build:sample1:cleanup build:sample1:cpy build:sample1:esifycss",
        "build:sample2:cleanup": "rimraf sample/02-no-mangle",
        "build:sample2:cpy": "cpy sample/00-src sample/02-no-mangle",
        "build:sample2:esifycss": "node ./lib/bin/esifycss.js --noMangle --helper sample/02-no-mangle/helper.js 'sample/02-no-mangle/**/*.css'",
        "build:sample2": "run-s build:sample2:cleanup build:sample2:cpy build:sample2:esifycss",
        "build": "run-s build:cleanup build:tsc build:helper build:bin build:sample*",
        "test": "ava -v",
        "test-client": "ava -v test/run.ts",
        "version:changelog": "conventional-changelog --preset angular --infile CHANGELOG.md --same-file --release-count 0",
        "version:add": "git add .",
        "version": "run-s version:changelog version:add"
    },
    "dependencies": {
        "@nlib/nbnf": "^3.10.0",
        "chokidar": "^3.0.1",
        "commander": "^2.20.0",
        "postcss": "^7.0.17",
        "postcss-selector-parser": "^6.0.2"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.0.0",
        "@commitlint/config-conventional": "^8.0.0",
        "@nlib/lint": "^3.10.0",
        "@types/anymatch": "^1.3.1",
        "@types/jsdom": "^12.2.3",
        "@types/micromatch": "3.1.0",
        "@types/node": "^12.0.8",
        "@types/selenium-webdriver": "^4.0.0",
        "@typescript-eslint/eslint-plugin": "^1.10.2",
        "@typescript-eslint/parser": "^1.10.2",
        "ava": "^2.1.0",
        "browserstack-local": "^1.4.0",
        "conventional-changelog-cli": "^2.0.21",
        "cpy-cli": "^2.0.0",
        "eslint": "^5.16.0",
        "husky": "^2.4.1",
        "lint-staged": "^8.2.1",
        "npm-run-all": "^4.1.5",
        "postcss-nested": "4.1.2",
        "rimraf": "^2.6.3",
        "selenium-webdriver": "^4.0.0-alpha.3",
        "ts-node": "^8.3.0",
        "typescript": "^3.5.2"
    },
    "ava": {
        "compileEnhancements": false,
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "files": [
            "lib/**/*.test.js"
        ]
    },
    "eslintConfig": {
        "extends": "./node_modules/@nlib/lint/.eslintrc.json",
        "env": {
            "es6": true,
            "node": true
        },
        "overrides": [
            {
                "files": [
                    "scripts/",
                    "src/helper/**/*",
                    "test/*/src/*"
                ],
                "env": {
                    "node": false,
                    "browser": true
                }
            },
            {
                "files": [
                    "src/helper/**/*"
                ],
                "rules": {
                    "no-inline-comments": "off"
                }
            },
            {
                "files": [
                    "scripts/*"
                ],
                "rules": {
                    "no-bitwise": "off"
                }
            },
            {
                "files": [
                    "test/**/*.ts"
                ],
                "rules": {
                    "no-process-env": "off",
                    "@typescript-eslint/no-triple-slash-reference": "off"
                }
            },
            {
                "files": [
                    "sample/**/*"
                ],
                "rules": {
                    "no-console": "off"
                }
            }
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.ts": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            ":ignoreModulesAndTests",
            ":unpublishSafe",
            ":semanticPrefixChore",
            ":prNotPending",
            ":prConcurrentLimit10",
            ":prHourlyLimitNone",
            ":label(dependencies)",
            ":automergeMinor"
        ]
    }
}
