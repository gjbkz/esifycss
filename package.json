{
    "name": "esifycss",
    "version": "0.1.16",
    "description": "Generates .js or .ts exports class names and custom properties",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "license": "Apache-2.0",
    "engines": {
        "node": ">=8"
    },
    "repository": "kei-ito/esify",
    "main": "lib/index.js",
    "bin": {
        "esifycss": "lib/bin/esifycss"
    },
    "scripts": {
        "lint": "eslint --ext .ts src",
        "build": "tsc",
        "test": "ava lib/**/*.test.js",
        "version:changelog": "conventional-changelog --preset angular --infile CHANGELOG.md --same-file --release-count 0",
        "version:add": "git add .",
        "version": "npm-run-all --sequential version:changelog version:add"
    },
    "dependencies": {
        "@nlib/nbnf": "^3.9.3",
        "chokidar": "^3.0.0",
        "commander": "^2.20.0",
        "postcss": "^7.0.16",
        "postcss-selector-parser": "^6.0.2"
    },
    "devDependencies": {
        "@commitlint/cli": "^7.6.1",
        "@commitlint/config-conventional": "^7.6.0",
        "@nlib/lint": "^3.8.0",
        "@types/anymatch": "^1.3.1",
        "@types/micromatch": "3.1.0",
        "@types/node": "^12.0.4",
        "@typescript-eslint/eslint-plugin": "^1.9.0",
        "ava": "^1.4.1",
        "conventional-changelog-cli": "^2.0.21",
        "eslint": "^5.16.0",
        "husky": "^2.3.0",
        "lint-staged": "^8.1.7",
        "npm-run-all": "4.1.5",
        "postcss-nested": "4.1.2",
        "ts-node": "^8.2.0",
        "typescript": "^3.5.1"
    },
    "ava": {
        "compileEnhancements": false,
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ]
    },
    "eslintConfig": {
        "extends": "./node_modules/@nlib/lint/.eslintrc.json",
        "env": {
            "es6": true,
            "node": true
        },
        "overrides": [
            {
                "files": [
                    "src/helper/**/*.ts"
                ],
                "env": {
                    "node": false,
                    "browser": true
                }
            }
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "eslint"
        ]
    },
    "renovate-config": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
